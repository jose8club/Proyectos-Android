<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/principal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textView2"
        android:layout_weight="0.1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textView11"
        android:layout_weight="0.1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textView12"
        android:layout_weight="0.1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contenedor">

            <LinearLayout
                android:id="@+id/layout_serie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/act_serie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:textSize="17sp"
                    android:hint="Ingresar Numero de Serie" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="0.49" />

            <LinearLayout
                android:id="@+id/layout_nombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/act_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:textSize="17sp"
                    android:hint="Ingresar Nombre de la Obra" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="0.49" />

            <LinearLayout
                android:id="@+id/layout_autor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/act_autir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:textSize="17sp"
                    android:hint="Ingresar Nombre del Autor" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.49" />

            <LinearLayout
                android:id="@+id/layout_audio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/act_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:textSize="17sp"
                    android:hint="Ingresar Link del Audio" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.49" />

            <LinearLayout
                android:id="@+id/layout_video"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/act_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:textSize="17sp"
                    android:hint="Ingresar Link del Video" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="0.49" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="0.49" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="0.49" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar en Base de Datos"
                android:id="@+id/btn_ing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0.49" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver a Pantalla Principal"
                android:id="@+id/btn_retuno" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_weight="0.49" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:id="@+id/ing_json" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>


