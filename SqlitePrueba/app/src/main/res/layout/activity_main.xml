<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="NÃºmero de Serie: "
        android:id="@+id/lblIdentificacion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/edtIdentificacion"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lblNombre"
        android:layout_toRightOf="@+id/lblNombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Nombre de la obra: "
        android:id="@+id/lblNombre"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/lblIdentificacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/edtNombre"
        android:layout_above="@+id/lblAutor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lblNombre"
        android:layout_toRightOf="@+id/lblNombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Tabla de Obras Disponibles: "
        android:id="@+id/lblAutor"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listArte"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lblAutor"
        android:clickable="true" />

</RelativeLayout>
