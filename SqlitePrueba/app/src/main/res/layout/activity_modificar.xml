<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pruebas.sqliteprueba.Modificar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="NÃºmero de Serie: "
        android:id="@+id/lblModIdentificacion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/edtModIdentificacion"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lblModNombre"
        android:layout_toRightOf="@+id/lblModNombre"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Nombre de la obra: "
        android:id="@+id/lblModNombre"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/lblModIdentificacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/edtModNombre"
        android:layout_alignTop="@+id/lblModNombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lblModNombre"
        android:layout_toEndOf="@+id/lblModNombre" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/lblModNombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp">

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar" />
    </LinearLayout>

</RelativeLayout>
