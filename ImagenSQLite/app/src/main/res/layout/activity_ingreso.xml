                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/act_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
